<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6c6c6"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_default_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4636C0"
        android:orientation="horizontal"
        android:padding="10dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_default_message_title"
            android:text="Default message"
            android:background="#4636C0"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_default_message_title">

        <TextView
            android:id="@+id/tv_default_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:text="Template:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_default_message"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_default_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:dividerPadding="5dp"
            android:hint="Default message"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_default_send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="300dp"
            android:text="Send to:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/ev_default_send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_default_send_to"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tv_default_send_to"
            android:background="#FFFFFF"
            android:dividerPadding="5dp"
            android:hint="1234567890"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_default_Cancel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Cancel"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_default_Ok"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="OK"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>